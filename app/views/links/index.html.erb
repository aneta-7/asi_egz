<ul class="nav navbar-nav pull-right">
    <li><div class = "przycisk"><%= link_to '', hashtags_path, class: "btn btn-default glyphicon glyphicon-tags", title: "Hasztagi" %></div></li>
</ul>
<% @links.each do |link| %>
  <div class="link row clearfix">
    <h2>
      <%= link_to link.title, link %> <%= link.ci_lower_bound(link.get_upvotes.size, link.get_upvotes.size+link.get_downvotes.size, 0.95) %>%<br>
      <small class="author">Przesłane <%= time_ago_in_words(link.created_at) %> temu przez <%= link.user.name %></small>
    </h2>

    <div class="btn-group">
      <a class="btn btn-default btn-sm" href="<%= link.url %>" target="_blank">Odwiedź link</a>
      <% if user_signed_in? %>
      <%= link_to like_link_path(link), method: :put, class: "btn btn-default btn-sm" do %>
        <span class="glyphicon glyphicon-thumbs-up"></span>
        <%= link.get_upvotes.size %>
      <% end %>
      <%= link_to dislike_link_path(link), method: :put, class: "btn btn-default btn-sm" do %>
        <span class="glyphicon glyphicon-thumbs-down"></span>
        <%= link.get_downvotes.size %>
      <% end %>
      <% end %>
    </div>
  </div>
<% end %>