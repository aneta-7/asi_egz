<div class="page-header">
  <h1><a href="<%= @link.url %>", target="_blank"><%= @link.title %></a> <%= @link.ci_lower_bound(@link.get_upvotes.size, @link.get_upvotes.size+@link.get_downvotes.size, 0.95) %>% </br> <small>Przesłane przez: <%= @link.user.name %></small></h1>
</div>

<div class="btn-group">
	<%= link_to 'Odwiedź link', @link.url, class: "btn btn-primary", target: "_blank" %>
</div>

<div class="btn-group pull-right">
  <% if user_signed_in? %>
  <%= link_to like_link_path(@link), method: :put, class: "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-chevron-up"></span>
    <%= @link.get_upvotes.size %>
  <% end %>
  <%= link_to dislike_link_path(@link), method: :put, class: "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-chevron-down"></span>
    <%= @link.get_downvotes.size %>
  <% end %>
  <% end %>
</div>

<% if @link.user == current_user -%>
	<div class="btn-group">
		<%= link_to 'Edytuj', edit_link_path(@link), class: "btn btn-default" %>
		<%= link_to 'Usuń', @link, method: :delete, data: { confirm: 'Na pewno?' }, class: "btn btn-default" %>
	</div>
<% end %>

<% if user_signed_in? %>
</br></br></br>
<%= simple_form_for [@link, Comment.new]  do |f| %>
  <div class="field">
    <%= f.text_area :body, class: "form-control", required: true, id: "textKom" %>
  </div>
  <br>
  <%= f.submit "Dodaj komentarz", class: "btn btn-primary", id: "buttonKom" %>
  <a class="btn btn-primary" href="http://www.emoji-cheat-sheet.com/" target="_blank"> Emotikony </a>
<% end %>
<% end %>

<h3 class="comments_title">
  <%= @link.comments.count %>
  <% if @link.comments.count == 1 %>
  komentarz
  <% end %>
  <% if @link.comments.count == 2 || @link.comments.count == 3 || @link.comments.count == 4 %>
  komentarze
  <% end %>
  <% if @link.comments.count == 0 || @link.comments.count >= 5 %>
  komentarzy
  <% end %>
</h3>
<div id="comments">
  <%= render :partial => @link.comments %>
</div>